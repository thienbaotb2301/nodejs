extends ../layouts/common

block content

    h1 Products
    .d-flex.align-items-center
        form.ml-auto(action="/products/search", class="d-flex", method="GET")
            input(class="form-control", name="q", type="text")
            button(class="btn btn-primary ml-2") Search
    .row
        each product in products
            .col-sm-6.col-md-4.col-lg-3
                .card.mb-3
                    img.card-img-top(src= product.image)
                    .card-body
                        .h3.card-title= product.name
                        .card-text= product.description
                        a.btn.btn-primary(href='/cart/add/' + product.id) Add to cart
    <nav aria-label="Page navigation example", class="d-flex align-items-center">
        <ul class="pagination ml-auto">
            <li class="page-item"><a class="page-link" href="?page=1">1</a></li>
            <li class="page-item"><a class="page-link" href="?page=2">2</a></li>            
        </ul>
    </nav>