extends ../layouts/common

block content

    h1 Products
    .d-flex.align-items-center
        form.ml-auto(action="/products/search", class="d-flex", method="GET")
            input(class="form-control", name="q", type="text")
            button(class="btn btn-primary ml-2") Search
    .row
        each product in products
            .col-sm-6.col-md-4.col-lg-3
                .card.mb-3
                    img.card-img-top(src= product.image)
                    .card-body
                        .h3.card-title= product.name
                        .card-text= product.description
                        a.btn.btn-primary(href='/cart/add/' + product.id) Add to cart
    nav.d-flex.align-items-center(aria-label='Page navigation')
        ul.pagination.ml-auto
            li.page-item
                a.page-link(href='?page=1') 1
            li.page-item
                a.page-link(href='?page=2') 2
            li.page-item
                a.page-link(href='?page=3') 3
